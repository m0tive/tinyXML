rm -rf ./tinyxml_unix
rm -rf ./docs

doxygen dox

mkdir tinyxml_unix
mkdir tinyxml_unix/docs

cp readme.txt ./tinyxml_unix/README
cp changes.txt ./tinyxml_unix/CHANGES

