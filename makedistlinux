cp makefile ./tinyxml_unix
cp test0.xml ./tinyxml_unix
cp test1.xml ./tinyxml_unix
cp test2.xml ./tinyxml_unix
cp ./docs/*.* ./tinyxml_unix/docs

tar -zcf tinyxml-unix.tar.gz tinyxml_unix
